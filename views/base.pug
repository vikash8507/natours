html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Natours | #{title}
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Lato:300,300i,700")
        link(rel="stylesheet", href="/css/style.css")
        link(rel="shortcut icon", href="/img/favicon.png", type="img/favicon.png")
        link(href='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css' rel='stylesheet')
        
    body
        // HEADER
        header.header
            nav.nav.nav--tours
                a.nav__el(href='/') All Tours
            .header__logo
                img(src="/img/logo-white.png" alt="Natours logo")
            nav.nav.nav--user
                //- a.nav__el(href='#') My Bookings
                //- a.nav__el(href="#")
                //-     img.nav__user-img(href='img/users/default.jpg' alt='User Photo')
                //-     span Jonas
                a(href='/login').nav__el Log In
                a(href='/signup').nav__el.nav__el--cta Sign Up
        
        // CONTENT
        block content
            .main

        // FOOTER
        .footer
            .footer--logo
                img(src="/img/logo-green.png" alt="Natours logo")
            ul.footer__nav
                li
                    a(href='/') About Us
                li
                    a(href='/') Download apps
                li
                    a(href='/') Become a guide
                li
                    a(href='/') Contact Us
            p.footer__copyright &copy; by Vikash Kumar

        script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js")
        script(src="/js/login.js")
        
